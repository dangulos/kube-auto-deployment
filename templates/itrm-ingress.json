{
    "apiVersion": "extensions/v1beta1",
    "Kind": "Ingress",
    "metadata":{
        "name": "itrm-ingress",
        "annotations":{
            "nginx.ingress.kubernetes.io/rewrite-target": ""
        }
    },
    "spec":{
        "rules":[
            {
                "http":{
                    "paths":[
                        {
                            "path":"",
                            "pathType":"Prefix",
                            "backend":{
                                "serviceName":"service",
                                "servicePort":3000
                            }
                        }
                    ]
                }
            }
        ]
    }
}
