{
    "apiVersion": "networking.k8s.io/v1beta1",
    "Kind": "Ingress",
    "metadata":{
        "name": "itrm-ingress",
        "annotations":{
            "nginx.ingress.kubernetes.io/rewrite-target": "/"
        }
    },
    "spec":{
        "rules":[
            {
                "host": "foo.bar.com",
                "http":{
                    "paths":[
                        {
                            "path":"/foo",
                            "backend":{
                                "serviceName":"service",
                                "servicePort":"3000"
                            }
                        }
                    ]
                }
            }
        ]
    }
}