{
    "apiVersion": "extensions/v1beta1",
    "Kind": "Ingress",
    "metadata":{
        "name": "itrm-ingress",
        "annotations":{
            "nginx.ingress.kubernetes.io/rewrite-target": "/$2",
	        "kubernetes.io/ingress.class": "nginx"	    
	    }
    },
    "spec":{
        "rules":[
            {
                "http":{
                    "paths":[
                        {
                            "path":"/",
                            "backend":{
                                "serviceName":"service",
                                "servicePort":3000
                            }
                        }
                    ]
                }
            }
        ]
    }
}
